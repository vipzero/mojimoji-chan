{
	"name": "mojimoji-chan",
	"description": "5ch読み上げデスクトップアプリ",
	"version": "1.2.0",
	"author": "vipzero",
	"build": {
		"productName": "MojimojiChan",
		"appId": "dev.vipper.mojimojichan",
		"asar": true,
		"npmRebuild": false,
		"files": [
			"index.html",
			"build/**/*",
			"node_modules/**/*"
		]
	},
	"dependencies": {
		"@material-ui/core": "^4.8.2",
		"@material-ui/icons": "^4.5.1",
		"chch": "^2.4.0",
		"color": "^3.1.2",
		"dayjs": "^1.8.18",
		"lodash": "^4.17.19",
		"randomcolor": "^0.5.4",
		"react": "^16.12.0",
		"react-dom": "^16.12.0",
		"react-hooks-global-state": "^0.16.0",
		"react-redux": "^7.1.3",
		"react-use": "^13.13.0",
		"redux": "^4.0.5",
		"redux-persist": "^6.0.0",
		"redux-thunk": "^2.3.0",
		"styled-components": "^4.4.1",
		"typescript-fsa": "^3.0.0",
		"typescript-fsa-reducers": "^1.2.1"
	},
	"devDependencies": {
		"@babel/core": "^7.7.7",
		"@storybook/addon-actions": "^5.2.8",
		"@storybook/addon-info": "^5.2.8",
		"@storybook/addon-links": "^5.2.8",
		"@storybook/addons": "^5.2.8",
		"@storybook/react": "^5.2.8",
		"@types/color": "^3.0.1",
		"@types/jest": "^24.0.25",
		"@types/lodash": "^4.14.149",
		"@types/randomcolor": "^0.5.3",
		"@types/react": "^16.9.17",
		"@types/react-dom": "^16.9.4",
		"@types/react-redux": "^7.1.5",
		"@types/styled-components": "^4.4.1",
		"@types/webpack": "^4.41.1",
		"awesome-typescript-loader": "^5.2.1",
		"babel-loader": "^8.0.6",
		"bufferutil": "^4.0.1",
		"electron": "^7.1.7",
		"electron-builder": "^21.2.0",
		"electron-connect": "^0.6.3",
		"electron-devtools-installer": "^2.2.4",
		"electron-rebuild": "^1.8.8",
		"electron-reload-webpack-plugin": "^2.0.4",
		"eslint": "^6.8.0",
		"eslint-config-nzap": "^1.4.4",
		"husky": "^3.1.0",
		"jest": "^24.9.0",
		"lint-staged": "^9.5.0",
		"react-docgen-typescript-loader": "^3.6.0",
		"spawn-sync": "^2.0.0",
		"storybook-addon-material-ui": "^0.9.0-alpha.20",
		"ts-jest": "^24.2.0",
		"ts-loader": "^6.2.1",
		"typescript": "3.7.4",
		"utf-8-validate": "^5.0.2",
		"webpack": "^4.41.5",
		"webpack-cli": "^3.3.10"
	},
	"resolutions": {
		"**/@types/react": "16.9.11"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"keywords": [
		"Electron",
		"demo",
		"quick",
		"start",
		"tutorial",
		"typescript"
	],
	"license": "MIT",
	"lint-staged": {
		"src/**/*.{json,css,scss,md}": [
			"prettier --write",
			"git add"
		],
		"src/**/*.{js,jsx,ts,tsx}": [
			"eslint --fix",
			"git add"
		]
	},
	"main": "build/main.js",
	"repository": "https://github.com/vipzero/MojimojiChan",
	"scripts": {
		"build": "webpack",
		"dist": "yarn run build && electron-builder",
		"lint": "eslint --ext .ts,.tsx src",
		"pack": "electron-builder --dir",
		"start": "NODE_ENV=development webpack --config webpack.config.dev.js --watch",
		"test": "yarn lint",
		"storybook": "start-storybook -p 6006",
		"build-storybook": "build-storybook"
	}
}
